@model DailyTask.Service.Services.DailyTask.Models.DailyTaskGetModel

@{
    ViewData["Title"] = "Delete Task";
}

<h2 class="mb-4 text-danger">Delete Task</h2>

<div class="card shadow-sm p-4">
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label fw-bold">Task Name</label>
            <input class="form-control" value="@Model.Name" disabled />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Description</label>
            <textarea class="form-control" rows="3" disabled>@Model.Description</textarea>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Status</label>
            <input class="form-control" value="@Model.Status" disabled />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Start Time</label>
            <input class="form-control" value="@Model.StartTime.ToLocalTime().ToString("g")" disabled />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">End Time</label>
            <input class="form-control" value="@Model.EndTime.ToLocalTime().ToString("g")" disabled />
        </div>

        <div class="d-flex gap-2 mt-3">
            <button type="submit" class="btn btn-danger px-4">Confirm Delete</button>
            <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
        </div>
    </form>
</div>
