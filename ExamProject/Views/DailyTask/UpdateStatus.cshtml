@using DailyTask.Domain.Enums
@model DailyTask.Service.Services.DailyTask.Models.DailyTaskChangeStatusModel

@{
    ViewData["Title"] = "Update Task Status";
}

<style>
    body {
        background-color: #e0f7fa;
        font-family: Arial, sans-serif;
    }

    .container {
        max-width: 500px;
        margin: 50px auto;
        padding: 25px;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    h2 {
        text-align: center;
        margin-bottom: 25px;
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }

    select {
        width: 100%;
        padding: 8px 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
    }

    .btn-group {
        display: flex;
        justify-content: flex-end;
        gap: 10px;
        margin-top: 20px;
    }

    .btn-save {
        background-color: #7b1fa2;
        color: white;
        border: none;
        padding: 8px 15px;
        border-radius: 5px;
        cursor: pointer;
    }

        .btn-save:hover {
            background-color: #4a0072;
        }

    .btn-cancel {
        background-color: #d32f2f;
        color: white;
        border: none;
        padding: 8px 15px;
        border-radius: 5px;
        cursor: pointer;
    }

        .btn-cancel:hover {
            background-color: #9a0007;
        }
</style>

<div class="container">
    <h2>Update Status - Task Id: @Model.Id</h2>

    <form asp-action="UpdateStatus" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Status"></label>
            <select asp-for="Status" asp-items="Html.GetEnumSelectList<TaskStatuss>()">
            </select>
        </div>

        <div class="btn-group">
            <button type="submit" class="btn-save">Save Status</button>
            <a asp-action="Index" class="btn-cancel">Cancel</a>
        </div>
    </form>
</div>
